<div class="d-flex justify-content-between align-items-center">
  <h1>Tweets</h1>
  <% if Current.user.twitter_accounts.any? %>
    <%= link_to "Scheduled a Tweet", new_tweet_path, data: { turbo: false }, class: "btn btn-primary" %>
    <% else %>
    <%= button_to "Conect Tweeter", "/auth/twitter", data: { turbo: false }, class: "btn btn-primary" %>
  <% end %>
</div>

<%= render @tweets %>
