<%= form_with model: tweet, data: { turbo: false } do |form| %>
  <%= render "shared/errors_form", form: form %>

  <div class="mb-3">
    <%= form.label :twitter_account_id %>
    <%= form.collection_select :twitter_account_id, Current.user.twitter_accounts, :id, :username, {}, { class: "form-control mb-3" } %>
    <%# <%= button_to "Connect your twitter account", "/auth/twitter", data: { turbo: false } , class: "btn btn-primary" %>
  </div>

  <div class="mb-3">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :publish_at %>
    <div class="form-control">
      <%= form.datetime_select :publish_at %>
      </div>
  </div>

  <%= form.submit class: "btn btn-primary" %>
  <% if form.object.persisted? %>
    <%= button_to "Delete" , form.object, method: :delete, data: { turbo: false } ,class:"btn btn-outline-danger" %>
  <% end %>
<% end %>
