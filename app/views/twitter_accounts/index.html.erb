<div class="d-flex align-items-center justify-content-between">
  <h1>Twitter Accounts</h1>
  <%= button_to "Connect Twitter", "/auth/twitter", method: :post, data: { turbo: false }, class: "btn btn-primary" %>
</div>

<% @twitter_accounts.each do |twitter_account| %>
  <div class="d-flex align-items-center mb-4">
    <% if twitter_account.image %>
      <%= image_tag twitter_account.image %>
    <% end %>
    
    <%= link_to "@#{twitter_account.name}" , "https://twitter.com/#{twitter_account.username}", target: :_blank %> 

    <%= button_to "Disconect", twitter_account, method: :delete, data: { confirm: "Are you sure?", turbo: "false" } %>
  </div>
<% end %>
